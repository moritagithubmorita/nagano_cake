<div class="container">
  <div>
    <h2><%= @title %><label>(全<%= Item.count %>件)</label></h2>
  </div>
  <div>
    <% @items.each do |item| %>
      <%= link_to item_path(item.id) do %>
        <div class="card shadow-sm">
          <div class="card-img-top">
            <%= attachment_image_tag item, :image, :fill, 40, 40, fallback: 'no_image.png', size: '40x40' %>
          </div>
          <div class="card-body">
            <div class="card-title"><%= item.name %></div>
            <div class="card-text"><%= item.introduction %></div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <div>
    <%= paginate @items %>
  </div>
</div>