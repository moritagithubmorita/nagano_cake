<div class="container">
  <div class="row">
    <h2>新規会員登録</h2>
    <div class="col-lg-10">
      <%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class:"new_customer", local:true do |f| %>
        <%#= render "public/shared/error_messages", resource: resource %>
        <table class="table table-striped">
          <tr>
            <td>名前</td>
            <td>(姓)<%= f.text_field :last_name, placeholder: '令和', class:"form-control" %></td>
            <td>(名)<%= f.text_field :first_name, placeholder: '道子', class:"form-control" %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td>(セイ)<%= f.text_field :last_name_kana, placeholder: 'レイワ', class:"form-control" %></td>
            <td>(メイ)<%= f.text_field :first_name_kana, placeholder: 'ミチコ', class:"form-control" %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= f.email_field :email, placeholder: 'sample@example.com', class:"form-control" %></td>
          </tr>
          <tr>
            <td>郵便番号(ハイフンなし)</td>
            <td><%= f.text_field :postal_code, placeholder: '0000000', class:"form-control" %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= f.text_field :address, placeholder: '東京都渋谷区代々木神園町0-0', class:"form-control" %></td>
          </tr>
          <tr>
            <td>電話番号(ハイフンなし)</td>
            <td><%= f.telephone_field :telephone_number, placeholder: '00000000000', class:"form-control" %></td>
          </tr>
          <tr>
            <td>パスワード(6文字以上)</td>
            <%# if @minimum_password_length %>
              <%#<em>(<%= @minimum_password_length %><%# characters minimum)</em>
            <% end %><%#<br>%>
            <td><%= f.password_field :password, class:"form-control" %></td>
          </tr>
          <tr>
            <td>パスワード(確認用)</td>
            <td><%= f.password_field :password_confirmation, class:"form-control" %></td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit '新規登録', class:"form-control" %></td>
          </tr>
        </table>
      <% end %>

      <%#= render "public/shared/links" %>
      <h2>既に登録済みの方</h2>
      <p>
        <%= link_to 'こちら', new_customer_session_path %>からログインしてください。
      </p>
    </div>
  </div>
</div>
