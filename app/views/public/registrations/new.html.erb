<div class="container">
  <div class="row">
    <h2>新規会員登録</h2>
    <div class="col-lg-10">
      <%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class:"new_customer", local:true do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <table class="table table-striped">
          <tr>
            <td>名前</td>
            <td>(姓)<%= f.text_field :last_name, class:"form-control" %></td>
            <td>(名)<%= f.text_field :first_name, class:"form-control" %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td>(セイ)<%= f.text_field :last_name_kana, class:"form-control" %></td>
            <td>(メイ)<%= f.text_field :first_name_kana, class:"form-control" %></td>
          </tr>
          <tr>
            <td colspan="2">メールアドレス</td>
            <td><%= f.email_field :email, class:"form-control" %></td>
          </tr>
          <tr>
            <td colspan="2">郵便番号(ハイフンなし)</td>
            <td><%= f.text_field :postal_code, class:"form-control" %></td>
          </tr>
          <tr>
            <td colspan="2">住所</td>
            <td colspan="2"><%= f.text_field :address, class:"form-control" %></td>
          </tr>
          <tr>
            <td colspan="2">電話番号(ハイフンなし)</td>
            <td><%= f.telephone_field :telephone_number, class:"form-control" %></td>
          </tr>
          <tr>
            <td colspan="2">パスワード(6文字以上)</td>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br>
            <td><%= f.password_field :password, class:"form-control" %></td>
          </tr>
          <tr>
            <td colspan="2">パスワード(確認用)</td>
            <td><%= f.password_field :password_confirmation, class:"form-control" %></td>
          </tr>
          <tr>
            <td colspan="2"></td>
            <td><%= f.submit '新規登録', class:"form-control" %></td>
          </tr>
        </table>
      <% end %>

      <%#= render "public/shared/links" %>
      <h2>既に登録済みの方</h2>
      <p>
        <%= link_to 'こちら', new_customer_session_path %>からログインしてください。
      </p>
    </div>
  </div>
</div>
