<div class="container-fluid">
  <div class="pc-edit-c">
    <div class="row">
      <h2>会員情報更新</h2>
      <% if @customer.errors.any? %>
        <%= render partial: 'admin/errors/error', locals: {model: @customer} %>
      <% end %>
    </div>
    <div class="row">
      <div class="col-lg-10 mx-auto">
        <%= form_with model: current_customer, url: '/customers', local:true, method: :patch, class:"form-horizontal" do |f| %>
          <div class="form-group row">
            <label class="col-lg-2">氏名</label>
            <%= f.text_field :last_name, class:"col-lg-2 mx-3" %>
            <%= f.text_field :first_name, class:"col-lg-2 mx-3" %>
          </div>
          <div class="form-group row">
            <label class="col-lg-2">フリガナ</label>
            <%= f.text_field :last_name_kana, class:"col-lg-2 mx-3" %>
            <%= f.text_field :first_name_kana, class:"col-lg-2 mx-3" %>
          </div>
          <div class="form-group row">
            <label class="col-lg-2">郵便番号</label>
            <%= f.text_field :postal_code, class:"col-lg-2 mx-3" %>
          </div>
          <div class="form-group row">
            <label class="col-lg-2">住所</label>
            <%= f.text_field :address, class:"col-lg-6 mx-3" %>
          </div>
          <div class="form-group row">
            <label class="col-lg-2">電話番号</label>
            <%= f.telephone_field :telephone_number, class:"col-lg-2 mx-3" %>
          </div>
          <div class="form-group row">
            <label class="col-lg-2">メールアドレス</label>
            <%= f.email_field :email, class:"col-lg-2 mx-3" %>
          </div>
          <div class="form-group row">
            <div class="col-lg-2"></div>
            <%= f.submit '編集内容を保存', class:"btn btn-success col-lg-2 mx-3" %>
            <%= link_to '退会する', customers_confirm_path, class:"btn btn-danger col-lg-1 mx-3" %>
          </div>
         <% end %>
      </div>
    </div>
  </div>
</div>