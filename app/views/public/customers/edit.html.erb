<div class="container">
  <div class="row">
    <h2>会員情報更新</h2>
    <% if @customer.errors.any? %>
      <%= render partial: 'admin/errors/error', locals: {model: @customer} %>
    <% end %>
    <div class="col-lg-10">
      <%= form_with model: current_customer, url: '/customers', local:true, method: :patch do |f| %>
        <table class="table table-striped">
          <tr>
            <td><label>氏名</label></td>
            <td><%= f.text_field :last_name %> <%= f.text_field :first_name %></td>
          </tr>
          <tr>
            <td><label>フリガナ</label></td>
            <td><%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana %></td>
          </tr>
          <tr>
            <td><label>郵便番号</label></td>
            <td><%= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= f.text_field :address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= f.telephone_field :telephone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= f.email_field :email %></td>
          </tr>
        </table>
        <div>
          <%= f.submit '編集内容を保存' %> <%= link_to '退会する', customers_confirm_path %>
        </div>
       <% end %>
    </div>
  </div>
</div>