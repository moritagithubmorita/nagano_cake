<div class="container">
  <div class="row">
    <h2>会員情報更新</h2>
    <div class="col-lg-10">
      <table class="table table-striped">
        <%= form_with model: current_customer, url: '/customers', local:true do |f| %>
          <tr>
            <td><label>氏名</label></td>
            <td><%= f.text_field :last_name %> <%= f.text_field :firlst_name %></td>
          </tr>
          <tr>
            <td><label>フリガナ</label></td>
            <td><%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana %></td>
          </tr>
          <tr>
            <td><label>郵便番号</label></td>
            <td><%= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= f.text_field :address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= f.telephone_field :telephone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= f.email_field :email %></td>
          </tr>
          <div>
            <%= f.submit '編集内容を保存' %> <%= link_to '退会する', customers_confirm_path %>
          </div>
        <% end %>
      </table>
    </div>
  </div>
</div>