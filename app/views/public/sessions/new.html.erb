<div class="container-fluid">
  <div class="row">
    <h2>ログイン</h2>
  </div>
  <div class="row">
    <label class="sessions-subtitle-label">会員の方はこちらからログイン</label>
  </div>
  <div class="row">
    <div class="col-lg-6 sessions-form-col">
      <div>
        <%= form_with model: @customer, url: customer_session_path, local:true, class:"form-horizontal" do |f| %>
          <div class="form-group row ">
            <label class="col-lg-3">メールアドレス</label>
            <%= f.email_field :email, placeholder: 'sample@exapmle.com', class:"form-control col-lg-8" %>
          </div>
          <div class="form-group row">
            <label class="col-lg-3">パスワード</label>
            <%= f.password_field :password, class:"form-control col-lg-8" %>
          </div>
          <div class="form-group row">
            <div class="col-lg-3"></div>
            <%= f.submit "ログイン", class:"form-control btn btn-info col-lg-3" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <label class="sessions-subtitle-label">会員登録がお済みでない方</label>
  </div>
  <div class="row">
    <div class="col-lg-3"></div>
    <p class="sessions-sign-up-link col-lg-8"><%= link_to "こちら", new_customer_registration_path %>から新規登録を行ってください。</p>
  </div>
</div>