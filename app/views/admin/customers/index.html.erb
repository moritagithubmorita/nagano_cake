<div class="container-fluid">
  <div class="row">
    <label>会員一覧</label>
    <div class="col-lg-10">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td><%= link_to admin_customer_path(customer.id) do %><%= customer.last_name %><%= customer.first_name %><% end %></td>
              <td><%= customer.email %></td>
              <td>
                <label>
                  <% if customer.is_active %>
                    有効
                  <% else %>
                    退会
                  <% end %>
                </label>
              </td>
            </tr>
          <% end %>
        </thead>
      </table>
    </div>
    <%= paginate @customers %>
  </div>
</div>