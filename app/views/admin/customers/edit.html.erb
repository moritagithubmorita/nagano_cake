<div class="container-fluid">
  <div class="row">
    <h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h2>
    <div class="col-lg-10">

      <% if @customer.errors.any? %>
        <%= render partial: 'admin/errors/error', locals: {model: @customer} %>
      <% end %>

      <%= form_with model: @customer, url: "/admin/customers/#{@customer.id}", local:true do |f| %>
      <table class="table table-striped">
          <tr>
            <td>会員ID</td>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td><%= f.text_field :last_name, class:"form-control" %>  <%= f.text_field :first_name %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%= f.text_field :last_name_kana, class:"form-control" %>  <%= f.text_field :first_name_kana %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= f.text_field :postal_code, class:"form-control" %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= f.text_field :address, class:"form-control" %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= f.text_field :telephone_number, class:"form-control" %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= f.email_field :email, class:"form-control" %></td>
          </tr>
          <tr>
            <td>会員ステータス</td>
            <td><%= f.radio_button :is_active, true, class:"form-control" %>有効 <%= f.radio_button :is_active, false, class:"form_control" %>退会</td>
          </tr>
          <tr>
            <td colspan="1"></td>
            <td><%= f.submit '変更を保存', class:"form-control" %></td>
          </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>