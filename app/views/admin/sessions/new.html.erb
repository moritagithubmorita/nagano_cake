<div class="container-fluid as-new-container">
  <div class="row">
    <h2>管理者ログイン</h2>
  </div>
  <div class="row">
    <div class="col-lg-7 mx-auto">
      <%= form_with model: @admin, url: admin_session_path, local: true, class:"form-horizontal" do |f| %>
        <div class="form-group row">
          <label class="col-lg-3">メールアドレス</label>
          <%= f.email_field :email, autocomplete: "email", placeholder: 'sample@example.com', class:"form-control col-lg-9" %>
        </div>

        <div class="form-group row">
          <label class="col-lg-3">パスワード</label>
          <%= f.password_field :password, autocomplete: "current-password", class:"form-control col-lg-9" %>
        </div>

        <div class="row">
          <%= f.submit "ログイン", class:"btn btn-info mx-auto" %>
        </div>

      <% end %>
    </div>
  </div>
</div>