  <div>
    <%= form_with model: genre, url: url, local: true, class:"form-horizontal" do |f| %>
      <div class="form-group row">
        <label class="col-lg-3">ジャンル名</label>
        <%= f.text_field :name, placeholder: 'ジャンル名', class:'form-control col-lg-4' %>
        <label class="col-lg-1"></label>
        <%= f.submit text, class:"btn btn-success col-lg-3" %>
      </div>
    <% end %>
  </div>