<div class="container">
  <div class="row">
    <label>商品詳細</label>
    <div class="col-lg-3">
      <%= attachment_image_tag @item, :image %>
    </div>
    <div class="col-lg-7">
      <table class="table table-striped">
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= Genre.find(@item.genre_id) %></td>
        </tr>
        <tr>
          <td>税込価格<br>(税抜価格)</td>
          <% tax = @item.price*1.08 %>
          <td><%= tax (@item.price) 円 %></td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <td>
            <% if @item.is_active %>
              <label>販売中</label>
            <% else %>
              <label>販売停止中</label>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>