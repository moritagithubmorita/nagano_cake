<div class="mx-auto">
  <%= form_with model: item, url: url, local:true, class:"form-horizontal" do |f| %>
    <div class="form-group row">
      <label class="col-lg-3">商品画像</label>
      <%= f.attachment_field :image %>
    </div>
    <div class="form-group row">
      <label class="col-lg-3">商品名</label>
      <%= f.text_field :name, placeholder: '商品名', class:"form-control col-lg-7" %>
    </div>
    <div class="form-group row">
      <label class="col-lg-3">商品説明</label>
      <%= f.text_area :introduction, placeholder: 'ここに説明文を記述します', class:"form-control col-lg-7" %>
    </div>
    <div class="form-group row">
      <label class="col-lg-3">ジャンル</label>
      <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択してください--", class:"form-control col-lg-7" %>
    </div>
    <div class="form-group row" >
      <label class="col-lg-3">税抜価格</label>
      <%= f.number_field :price, placeholder: '1000', class:"form-control col-lg-7" %><label>円</label>
    </div>
    <div class="form-group row form-inline">
      <label class="col-lg-3 ai-form-is-active-label">販売ステータス</label>
      <%= f.radio_button :is_active, true, checked: true %><label class="mx-1">販売中</label><%= f.radio_button :is_active, false %><label>売切れ</label>
    </div>
    <div class="row">
      <%= f.submit text, class:"mx-auto btn btn-success" %>
    </div>
  <% end %>
</div>